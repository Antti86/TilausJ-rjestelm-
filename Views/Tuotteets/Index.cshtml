@model IEnumerable<TilausJärjestelmä.Models.Tuotteet>

@{
    ViewBag.Title = "Index";

}

<h2>Kaikki Tuotteet</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@ViewBag.Sort</a>
    <div class="dropdown-menu">
        <a class="dropdown-item" @Html.ActionLink("A-Ö", "Index", new { sortOrder = "A-Ö" }) </a>
        <a class="dropdown-item" @Html.ActionLink("Ö-A", "Index", new { sortOrder = "Ö-A" }) </a>
        <a class="dropdown-item" @Html.ActionLink("Kallein ensin", "Index", new { sortOrder = "Kallein ensin" })</a>
