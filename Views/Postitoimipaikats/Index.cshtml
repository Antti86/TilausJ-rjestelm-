@model IEnumerable<TilausJärjestelmä.Models.Postitoimipaikat>

@{
    ViewBag.Title = "Index";
}

<h2>Postitoimipaikat</h2>

<div class="d-flex">

    <div>
        <label style="font-size: 150%">Etsi Postitoimipaikka</label>

        <form class="d-flex">
            <input class="form-control me-sm-2" type="text" name="SearchString" value=@ViewBag.Search>
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>

    <div class="nav-item dropdown" style="margin-left: 20%">
        <label style="font-size: 150%">Järjestele</label>
        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@ViewBag.Sort</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" @Html.ActionLink("A-Ö", "Index", new { sortOrder = "A-Ö", searchString = ViewBag.Search }) </a>
            <a class="dropdown-item" @Html.ActionLink("Ö-A", "Index", new { sortOrder = "Ö-A", searchString = ViewBag.Search }) </a>
            <a class="dropdown-item" @Html.ActionLink("Postinumero laskeva", "Index", new { sortOrder = "Postinumero laskeva", searchString = ViewBag.Search })</a>
            <a class="dropdown-item" @Html.ActionLink("Postinumero nouseva", "Index", new { sortOrder = "Postinumero nouseva", searchString = ViewBag.Search })</a>
            <div class="dropdown-divider"></div>
        </div>
    </div>
</div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Postitoimipaikka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postinumero)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Postitoimipaikka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postinumero)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Postinumero }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Postinumero }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Postinumero })
                </td>
            </tr>
        }

    </table>
