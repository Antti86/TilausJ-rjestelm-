@model IEnumerable<TilausJärjestelmä.Models.Asiakkaat>

@{
    ViewBag.Title = "Index";
}

<h2>Asiakalista</h2>

<div class="d-flex">

    <div>
        <label style="font-size: 150%">Etsi Asiakas</label>

        <form class="d-flex">
            <input class="form-control me-sm-2" type="text" name="SearchString" value=@ViewBag.Search>
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>

    <div class="nav-item dropdown" style="margin-left: 20%">
        <label style="font-size: 150%">Järjestele</label>
        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@ViewBag.Sort</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" @Html.ActionLink("A-Ö", "Index", new { sortOrder = "A-Ö", searchString = ViewBag.Search }) </a>
            <a class="dropdown-item" @Html.ActionLink("Ö-A", "Index", new { sortOrder = "Ö-A", searchString = ViewBag.Search }) </a>
            <a class="dropdown-item" @Html.ActionLink("Osoitteen mukaan", "Index", new { sortOrder = "Osoitteen mukaan", searchString = ViewBag.Search })</a>
            <a class="dropdown-item" @Html.ActionLink("Postitoimipaikan mukaan", "Index", new { sortOrder = "Postitoimipaikan mukaan", searchString = ViewBag.Search })</a>
            <div class="dropdown-divider"></div>
        </div>
    </div>

    <h3 style="margin-left: 30%">
        @Html.ActionLink("Create New", "Create")
    </h3>
</div>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Osoite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Postitoimipaikat.Postitoimipaikka)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Osoite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postitoimipaikat.Postitoimipaikka)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AsiakasID }) |
                @Html.ActionLink("Details", "Details", new { id = item.AsiakasID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.AsiakasID })
            </td>
        </tr>
    }

</table>
