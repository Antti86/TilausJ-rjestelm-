<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lihakauppa Oy</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h1 style="text-align:center">Tilausjärjestelmä</h1>
    <br />
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav" style="width:93%">
                    <li class="nav-item">
                        <a class="nav-link" href="~/TilausHallinta/Index">Tilausten hallinta</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Tuotteets/Index">Tuotteet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Asiakkaats/Index">Asiakkaat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Postitoimipaikats/Index">Postitoimipaikat</a>
                    </li>
                    <li class="nav-item ms-auto">
                        <a class="nav-link active" href="~/Home/Index">@Session["LogStatus"]
                            

                            @*<span class="visually-hidden">(current)</span>*@
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <br />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tilausjärjestelmä</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapSolar")
    @RenderSection("scripts", required: false)
</body>
</html>
