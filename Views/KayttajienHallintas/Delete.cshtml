@model TilausJärjestelmä.Models.Logins

@{
    ViewBag.Title = "Delete";
}
<script src="https://code.jquery.com/jquery-1.10.0.min.js"
        integrity="sha256-2+LznWeWgL7AJ1ciaIG5rFP7GKemzzl+K75tRyTByOE="
        crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $("#nappi").click(function () {
            $("#Varoitus").modal('show');
        })
    });
</script>

<h2>Käyttäjän poistaminen</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Käyttjänimi")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayName("Turvallisuus taso")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Level)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <button class="btn btn-primary my-2 my-sm-0" type="button" id="nappi">Poista käyttäjä</button>
    <a class="btn btn-secondary my-2 my-sm-0" @Html.ActionLink("Takaisin", "Index")
</div>


        <div class="modal fade" id="Varoitus">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Haluatko varmasti poistaa tämän käyttäjän?</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"></span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <input class="btn btn-primary col-4" type="submit" value="Kyllä">
                        <a class="btn btn-secondary col-4" @Html.ActionLink("Takaisin", "Delete")
                    </div>

                </div>
            </div>
        </div>
    }
</div>
